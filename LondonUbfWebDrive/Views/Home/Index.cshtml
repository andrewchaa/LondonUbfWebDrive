<div class="row">
    <div class="span9">
        <ul class="breadcrumb" id="breaddcrumb" data-bind="foreach: breadcrumbs">
            <li>
                <a href="#" class="btn btn-info" data-bind="text: Name, attr: { 'data-path': Path } "></a>
                <span class="divider">/</span>
            </li>
        </ul>
        <table class="table table-hover table-striped table-condensed">
            <tbody data-bind="foreach: documents" id="fileList">
                <tr>
                    <td class="span1"><img data-bind="attr: {src: ImagePath}" alt="icon" /></td>
                    <td><a data-bind="text: Name, attr: { href: '#', title: Name, 'data-path': FullName, 'data-isfolder': IsFolder }"></a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="span3">
        &nbsp;
    </div>
</div>

@Scripts.Render("~/Scripts/webdrive.js")
